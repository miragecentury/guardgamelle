{%extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Animal - Race - Ajout{% endblock %}

{% block subnavbar %}
{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="well">
                <form class=' form-horizontal' method="POST" >
                    <div class='form-group' style='text-align: center;'>
                        <h3>Ajout d'une Race</h4>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label for="{{ form.nom.vars.id }}" class="col-md-4 control-label">Nom de la Race :</label>
                        <div class="col-md-8">
                            <input id="{{ form.nom.vars.id }}" name="{{form.nom.vars.full_name}}" class="form-control" type="text"/>
                        </div>
                    </div>
                    <div class="form-group" style=''>
                        <label for="{{ form.type.vars.id }}" class="col-md-4 control-label">Type d'animal :</label>
                        <div class="col-md-8">
                            <select id="{{ form.nom.vars.id }}" name="{{form.nom.vars.full_name}}" class="form-control" >
                            {% for type in form.type.vars.choices %}
                                <option value="{{type.data.id}}">{{type.data.nom}}</option>
                            {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group" style='text-align: center;'>
                        <input class="btn btn-success" type="submit" value="Ajouter"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}