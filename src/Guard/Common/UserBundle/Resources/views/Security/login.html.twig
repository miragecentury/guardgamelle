{%extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock %}



{% block main %}
<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="well">
        {% block fos_user_content %}
            {% if error %}
                <div class="alert alert-warning">{{ error|trans }}</div>
            {% endif %}

                <form class="" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email"/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password"/>
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <input class="" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="Login" />
                    </div>
                </form>
        {% endblock fos_user_content %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
